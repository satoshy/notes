
<%= simple_form_for @note, :validate => true, :html => { :multipart => true} do |f| %>
  <% if @note.errors.any? %>
    <div class="alert alert-success">
      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-inputs">
    <%= f.input :title, autofocus: true, :error => false %>
    <%= f.input :body, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'mini'} }, :error => false %>
    <%= f.file_field :content %>
    <%= f.hidden_field :content_cache %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>